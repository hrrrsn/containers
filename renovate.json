{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["^docker.io/library/fedora$"],
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "matchDatasources": ["docker"],
      "automerge": true,
      "ignoreTests": true,
      "stabilityDays": 7
    }
  ]
}